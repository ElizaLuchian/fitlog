<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <!-- Header with back arrow and title -->
    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:navigationIcon="@android:drawable/ic_menu_revert"
                app:title="Log Outfit"
                app:titleTextColor="@android:color/black"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

            <!-- Date Field -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date *"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/dateCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:background="@color/gray_light"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:text="11/09/2025"/>

            </com.google.android.material.card.MaterialCardView>

            <!-- Select Items Section -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Items *"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

            <TextView
                    android:id="@+id/tvSelectedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0 selected)"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginBottom="12dp"/>

            <!-- Horizontal RecyclerView for Items -->
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvItems"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:clipToPadding="false"
                    android:paddingEnd="0dp"
                    android:layout_marginBottom="24dp"/>

            <!-- No Items Available Message -->
            <TextView
                    android:id="@+id/tvNoItemsAvailable"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="No items available"
                    android:textSize="16sp"
                    android:textColor="@color/gray_dark"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginBottom="24dp"/>

            <!-- Occasion Field -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Occasion *"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:background="@color/gray_light"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputOccasion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e.g., Work, Date, Party"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:padding="0dp"/>

            </com.google.android.material.card.MaterialCardView>

            <!-- Aesthetic Style Field -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aesthetic Style *"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:background="@color/gray_light"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp">

                <AutoCompleteTextView
                        android:id="@+id/inputAestheticStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select style"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:background="@android:color/transparent"
                        android:inputType="none"
                        android:focusable="true"
                        android:clickable="true"
                        android:focusableInTouchMode="true"
                        android:padding="0dp"/>

            </com.google.android.material.card.MaterialCardView>

            <!-- Outfit Photo (Optional) Section -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outfit Photo (Optional)"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

            <FrameLayout
                    android:id="@+id/photoCard"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/dashed_border"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginBottom="24dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                    <ImageView
                            android:id="@+id/cameraIcon"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_camera"
                            android:background="@drawable/circle_pink_bg"
                            android:padding="16dp"
                            android:contentDescription="Add photo"/>

                </LinearLayout>

            </FrameLayout>

            <!-- Photo Preview (hidden initially) -->
            <ImageView
                    android:id="@+id/photoPreview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:background="@color/gray_light"
                    android:visibility="gone"
                    android:layout_marginBottom="24dp"/>

            <!-- Notes Field -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:background="@color/gray_light"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e.g., Comfortable for all-day wear, received compliments"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:background="@android:color/transparent"
                        android:inputType="textMultiLine"
                        android:padding="0dp"
                        android:minLines="3"/>

            </com.google.android.material.card.MaterialCardView>

            <!-- Save Outfit Button -->
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Outfit"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:backgroundTint="@color/red_primary"
                    app:cornerRadius="8dp"
                    android:layout_marginTop="8dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

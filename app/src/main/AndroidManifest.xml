<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.FitLogNative">


        <activity
                android:name=".ui.MainActivity"
                android:exported="true"
                android:theme="@style/Theme.FitLogNative">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.wardrobe.AddClothingItemActivity" />
        <activity android:name=".ui.wardrobe.EditClothingItemActivity" />
        <activity android:name=".ui.wardrobe.ItemDetailsActivity" />
        <activity android:name=".ui.outfits.AddOutfitActivity" />
        <activity android:name=".ui.outfits.OutfitDetailsActivity" />
        <activity android:name=".ui.outfits.EditOutfitActivity" />


    </application>

</manifest>